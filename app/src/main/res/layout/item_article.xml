<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="article"
            type="ru.kiryanav.news.domain.model.ArticleUI" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/default_margin"
        app:cardElevation="@dimen/default_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/previewImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/preview_image"
                tools:background="@color/cardview_shadow_start_color" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/previewImage"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/news_8dp"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginBottom="4dp"
                android:text="@{article.title}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_news"
                android:textStyle="bold"
                tools:text="Some title Some title Some title Some title Some title Some title " />

            <ru.kiryanav.news.presentation.ui.view.ExpandableTextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="@dimen/default_margin"
                android:text="@{article.description}"
                android:textColor="#717171"
                android:textSize="@dimen/subtitle"
                app:trimLength="100"
                tools:text="Some title Some title Some title Some title Some title Some title " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:weightSum="1">

                <TextView
                    android:id="@+id/author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_weight="0.5"
                    android:text="@{article.author}"
                    android:textColor="#424242"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold"
                    tools:text="Author: Martin" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_marginStart="@dimen/margin_news_32dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:maxLength="10"
                    android:text="@{article.publishedAt}"
                    android:textSize="@dimen/subtitle"
                    tools:text="04.06_13:15" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>